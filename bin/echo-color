#!/usr/bin/env bash

BIN_NAME=$(basename "$0")

# Reset
COLOR_OFF='\033[0m'       # Text Reset

# Colors
IBlack='\033[0;90m'       # Black
IRed='\033[0;91m'         # Red
IGreen='\033[0;92m'       # Green
IYellow='\033[0;93m'      # Yellow
IBlue='\033[0;94m'        # Blue
IPurple='\033[0;95m'      # Purple
ICyan='\033[0;96m'        # Cyan
IWhite='\033[0;97m'       # White

# Bold Colors
BIBlack='\033[1;90m'      # Black
BIRed='\033[1;91m'        # Red
BIGreen='\033[1;92m'      # Green
BIYellow='\033[1;93m'     # Yellow
BIBlue='\033[1;94m'       # Blue
BIPurple='\033[1;95m'     # Purple
BICyan='\033[1;96m'       # Cyan
BIWhite='\033[1;97m'      # White

function usage {
    echo
    echo "USAGE:"
    echo -e "    ${IYellow}${BIN_NAME}${COLOR_OFF} [-b] color text"
    echo "    Available colors: black, red, green, yellow, blue, purple, cyan, white"
    echo
    echo "DESCRIPTION:"
    echo "    Prints the input text in the specified color."
    echo
    echo "COMMAND LINE OPTIONS:"
	echo -e "    ${IYellow}-b${COLOR_OFF}"
	echo "        prints the input text in bold "
    exit 1
}

if [[ "$1" == "-h" ]] || [[ "$1" == "--help" ]]; then
	usage
fi

BOLD="FALSE"

while getopts ':b' flag; do
	case "${flag}" in
		b) BOLD="TRUE";;
		*) usage
	esac
done

shift $((OPTIND -1))

INPUT_COLOR="$1"
shift

TEXT="$*"

[[ -z "$INPUT_COLOR" ]] && usage
[[ -z "$TEXT" ]] && usage

if [[ "$BOLD" == "FALSE" ]]; then
    case "$INPUT_COLOR" in
        black) COLOR="$IBlack";;
        red) COLOR="$IRed";;
        green) COLOR="$IGreen";;
        yellow) COLOR="$IYellow";;
        blue) COLOR="$IBlue";;
        purple) COLOR="$IPurple";;
        cyan) COLOR="$ICyan";;
        white) COLOR="$IWhite";;
        *) usage
    esac
else
    case "$INPUT_COLOR" in
        black) COLOR="$BIBlack";;
        red) COLOR="$BIRed";;
        green) COLOR="$BIGreen";;
        yellow) COLOR="$BIYellow";;
        blue) COLOR="$BIBlue";;
        purple) COLOR="$BIPurple";;
        cyan) COLOR="$BICyan";;
        white) COLOR="$BIWhite";;
        *) usage
    esac
fi

echo -e "${COLOR}${TEXT}${COLOR_OFF}"